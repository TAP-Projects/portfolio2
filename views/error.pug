extends layout

block content
    nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
    article.grid-container.portfolio-intro
        .cell.small-6.medium-9.large-9
        h1= `${status} ${message}`
        div.error
            //- if single error
            if error 
                h2= error.status
                div= error.stack
            //- express-validator returns an array of errors
            else
                h2 Sorry. There's been  an error.
    nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back